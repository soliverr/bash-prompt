#! /bin/bash

case "$TERM" in
xterm*|rxvt*)
 SCREEN=`tty|sed s/\\\/dev\\\/...\\\///`
 case "`id --user --name`" in
   root)
      PS1='\[\033[01;41m\]\[\033[01;37m\][\u@\h:$SCREEN \w]#\[\033[00m\] '
   ;;
   oliver)
      PS1='[\[\033[01;34m\]\u\[\033[00m\]@\[\033[00;34m\]\h\[\033[00m\]:$SCREEN \[\033[01;34m\]\w\[\033[00m\]]$ '
   ;;
   admin)
      PS1='[\[\033[02;31m\]\u\[\033[00m\]@\[\033[00;34m\]\h\[\033[00m\]:$SCREEN \[\033[01;34m\]\w\[\033[00m\]]$ '
   ;;
   oracle)
      PS1='[\[\033[04;31m\]\u\[\033[00m\]@\[\033[04;34m\]\h\[\033[00m\]:\[\033[04;32m\]$ORACLE_SID\[\033[00m\] \[\033[01
;34m\]\w\[\033[00m\]]$ '
   ;;
   *) PS1='[\[\033[03;32m\]\u\[\033[00m\]@\[\033[00;34m\]\h\[\033[00m\]:$SCREEN \[\033[01;34m\]\w\[\033[00m\]]$ '
 esac
 ;;
*)
 PS1='${debian_chroot:+($debian_chroot)}\u@\h:\w\$ '
 ;;
esac
