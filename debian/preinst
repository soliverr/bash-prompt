#!/bin/sh
# preinst script for bash-prompt
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
#
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

_unwrite_debian_profiles() {
  for f in /etc/profile /etc/bash.bashrc ; do
    bs=`(grep --line-number "^# Added by bash-prompt package #" $f || echo 0) | cut -d ':' -f 1`
    be=`(grep --line-number "^# bash-prompt package #" $f || echo 0 ) | cut -d ':' -f 1`
    if [ $bs -gt 0 -a $be -gt $bs ] ; then
       sed --in-place "$bs,$be d" $f
    fi
  done
}

case "$1" in
    upgrade)
       _unwrite_debian_profiles
    ;;

    install|abort-upgrade)
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


